{
    // This is the standard VS Code configuration file for running and debugging.
    "version": "0.2.0",
    "configurations": [
        {
            // Name displayed in the VS Code debug pane
            "name": "Deno: Run Current File",
            // Use the Deno debug type (requires the Deno VS Code extension)
            "type": "deno",
            "request": "launch",
            // The file to execute, which is the currently active editor file (e.g., your_script.ts)
            "program": "${file}",
            // Arguments to pass to Deno (e.g., ["--allow-net"]) can be added here
            "args": [],
            // Current working directory is the root of your project
            "cwd": "${workspaceFolder}"
        }
    ]
}
